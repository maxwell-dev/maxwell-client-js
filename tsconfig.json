{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
